{
    "compilerOptions": {
        "lib": ["ES2019.Array"],
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "alwaysStrict": true,
        "declaration": false,
        "listEmittedFiles": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": false,
        "outDir": "build",
        "types": ["node"],
        "emitDecoratorMetadata": false,
        "downlevelIteration": true,
        "paths": {
            "@notifier/utils/*": ["src/submodules/notifier/utils/*"],
            "@nhentai/utils/*": ["src/utils/*"],
            "@nhentai/models/*": ["src/models/*"],
            "@nhentai/struct/*": ["src/struct/*"]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            }
        ],
        "baseUrl": ".",
        "rootDir": "."
    },
    "include": ["src/**/*"]
}
